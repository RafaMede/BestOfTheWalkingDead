<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="pt.ipbeja.estig.pdm.bestofthewalkingdead.MainActivity"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:src="@drawable/screen_principal"
        android:id="@+id/imageView"
        android:contentDescription="@string/The_Walking_Dead"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/imageView">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="110dp"
            android:background="@drawable/personagens_principais"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/relativeLayout2"
            android:layout_above="@+id/relativeLayout3"
            android:layout_alignParentTop="true">

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/Personagens_Principais"
                android:id="@+id/btnPersonagensPrincipais"
                android:onClick="btnOnClickPersonagensPrincipais"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#b18b8b8b"
                android:textSize="25sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/melhores_momentos"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout3">

            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/Melhores_Momentos"
                android:id="@+id/btnMelhoresMomentos"
                android:onClick="btnOnClickMelhoresMomentos"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="#ad8e8e8e"
                android:layout_alignParentBottom="true"
                android:textSize="25sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </RelativeLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTitulo"
        android:background="#82a6a6a6"
        android:text="@string/The_Walking_Dead"
        android:textIsSelectable="false"
        android:layout_marginBottom="27dp"
        android:textSize="48sp"
        android:textColor="#ffffff"
        android:inputType="none"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
